{% extends "layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/back-main.css">
{% endblock %}

{% block title %} Connexion - {{ parent() }} {% endblock %}


{% block body %}

    <section id="login" class="row">
        {% if error %}
            <div class="alert alert-danger">{{ error.message | trans}}</div>
        {% endif %}

        <div class="login-container col-md-5 col-xs-10">
            <h3 class="section-title">Connexion</h3>

            <form action="{{ path('login_check') }}" method="post" class="form-horizontal login-form col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label class="col-sm-5 control-label" for="username">Login</label>
                    <div class="col-sm-7 input">
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label" for="password">Mot de passe</label>
                    <div class="col-sm-7 input">
                        <input class="form-control" type="password" id="password" name="_password" />
                    </div>
                </div>
                <input class="btn btn-default pull-right" type="submit" value="Connexion"/>

            </form>
        </div>

    </section>


{% endblock %}