<tr>
    <td class="title-cell">
        <div class="cell-container">
            {% if career.structure %}{{ career.structure }}  -  {% endif %}{{ career.name }} ({{ career.date|date('Y') }})
        </div>
    </td>

    <td class="content-cell">
        <div class="cell-container">
            {{ career.description | raw }}
        </div>
    </td>
    <td class="status-cell">
        <div class="cell-container">
            {% if career.published %} Publié {% endif %}
            {% if not career.published %} <span class="not">Non publié </span>{% endif %}
        </div>
    </td>
    <td class="actions-cell">
        <div class="cell-container">
            <a href="{{ path('cm_back_career_list', {'id': career.id}) }}" class=""><i class="fas fa-edit"></i></a>
            <a href="{{ path('cm_back_career_toggle_published', {'id': career.id}) }}" class="">{% if career.published %}<i class="fas fa-eye-slash"></i>{% else %}<i class="fas fa-eye"></i>{% endif %}</a>
            <a href="{{ path('cm_back_career_delete', {'id': career.id}) }}" class=""><i class="fas fa-trash-alt"></i></a>
        </div>

    </td>
</tr>

