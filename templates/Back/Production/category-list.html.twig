<div class="col-md-8 paddingless">    <section id="category-list" >        <table class="table">            <caption>Liste des catégories de réalisation</caption>            <thead>            <tr>                <td>Nom</td>                <td>Réalisations associées</td>                <td>Actions</td>            </tr>            </thead>            <tbody>            {% for category in categories %}                <tr>                    <td class="name-cell">                        {{ category.name }}                    </td>                    <td class="productions-cell">                        {% for production in category.productions %}<a href="{{ path('cm_back_production_single', {'id': production.id}) }}">{{ production.name }}</a>{% if not loop.last %} | {% endif %}{% else %}<span class="not">Aucune</span>{% endfor %}                    </td>                    <td class="actions-cell">                        <a href="{{ path('cm_back_production_list', {'id': category.id, '_fragment': 'categories'}) }}" class=""><i class="fas fa-edit"></i></a>                        <a href="{{ path('cm_back_production_category_delete', {'id': category.id}) }}" class=""><i class="fas fa-trash-alt"></i></a>                    </td>                </tr>            {% endfor %}            </tbody>        </table>    </section></div><div class="col-md-offset-1 col-md-3">    <section id="category-form" class="form-aside row">        <h3>{% if category.name %}Édition de <strong>"{{ category.name }}"</strong>{% else %}Ajout d'une catégorie{% endif %}</h3>        <div class="section-content">            {{ form_start(form, {'attr': {'class': 'form-horizontal col-sm-offset-1 col-sm-10'}}) }}            {{ form_errors(form, {'attr': {'class': 'alert alert-warning'}}) }}            <div class="form-group">                {{ form_label(form.name, "Nom", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}                {{ form_errors(form.name) }}                <div class="col-sm-8 input">                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}                </div>            </div>            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary pull-right'}}) }}            {{ form_rest(form) }}            {{ form_end(form) }}        </div>    </section></div>