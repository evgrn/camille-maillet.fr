{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/back-main.css">
{% endblock %}

{% block title %}Admin | {{ parent() }}{% endblock %}

{% block body %}

    {{ render(controller("App\\Controller\\Back\\GlobalController::HeadAction")) }}
    <div class="main-content">
        {% for notice in app.session.flashbag.get('notice') %}
            <div class="notice">
                {{ notice }}
            </div>

        {% endfor %}
        <div class="page-container {% block pageName %} {% endblock %}">
            {% block main %}


            {% endblock %}
        </div>
    </div>

{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/js/backMenuToggle.js"></script>
{% endblock %}


